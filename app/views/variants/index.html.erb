<h1>Variants</h1>
<% if @variants.length > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @variants.each do |variant| %>
        <tr>
          <td><%= variant.name %></td>
          <td><%= variant.price %></td>
          <td><%= link_to 'Show', category_product_variant_path(@category, @product, variant) %></td>
          <td><%= link_to 'Edit', edit_category_product_variant_path(@category, @product, variant) %></td>
          <td><%= link_to 'Destroy', category_product_variant_path(@category, @product, variant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  No variants available
<% end %>

<br><br>
<%= link_to 'New Variant', new_category_product_variant_path(@category, @product) %> |
<%= link_to 'Back', category_product_path(@category, @product) %>