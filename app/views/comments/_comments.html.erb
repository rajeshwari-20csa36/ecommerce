<table>
  <thead>
  <tr>
    <th>List of Comments:</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% comments.each do |comment| %>
    <tr>
      <td><%= comment.description %></td>
      <td><%= link_to 'Edit', edit_category_product_comment_path(@category, @product, comment), remote: true %></td>
      <td><%= link_to 'Destroy', category_product_comment_path(@category, @product, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>